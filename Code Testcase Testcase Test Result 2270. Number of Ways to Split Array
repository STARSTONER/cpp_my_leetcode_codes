class Solution {
public:
    int waysToSplitArray(vector<int>& nums) {
        long long sum=0;
        long long curr=0;
        int count=0;
        int n=nums.size();
        for(int i=0;i<nums.size();i++){
            sum+=nums[i];

        }
        for(int i=0;i<n-1;i++){
            curr+=nums[i];
            if(curr>=sum-curr){
                count++;
            }

        }
        return count;

    }
};
